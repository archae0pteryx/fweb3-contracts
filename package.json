{
  "name": "fweb3-contracts",
  "license": "MIT",
  "scripts": {
    "hh": "npx hardhat",
    "clean": "yarn hh clean",
    "build": "yarn clean && yarn compile",
    "compile": "yarn hh compile",
    "test": "yarn hh test",
    "node": "yarn hh node",
    "coverage": "yarn build && yarn hh coverage",
    "deploy:local": "SAVE_PATH=local yarn hh run scripts/deploy.ts",
    "deploy:mumbai": "SAVE_PATH=mumbai yarn hh run scripts/deploy.ts --network mumbai",
    "deploy:polygon": "SAVE_PATH=polygon yarn hh run scripts/deploy.ts --network polygon",
    "lint": "npx solhint contracts/**/*.sol --fix",
    "pretty": "npx prettier scripts test -w"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "chai": "^4.3.6",
    "dotenv": "^16.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.2",
    "fs-extra": "^10.0.1",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.9.2",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3"
  }
}
